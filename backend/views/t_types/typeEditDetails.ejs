<!DOCTYPE html>
<html>
  <head>
    <title>Type Detail</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Geologica" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Comfortaa" />
  </head>
  <body>
    <header>
      <nav class="navbar">
        <a href="/" class="nav-branding">PortugueseRoots</a>
        <a href="/users" class="button">See all Users</a>
        <a href="/users/create" class="button secondary">Create user</a>
        <ul class="nav-menu">
          <li class="nav-item">
            <a href="/users/admins" class="nav-link">See all admins</a>
          </li>
          <li class="nav-item">
            <a href="/events" class="nav-link">See all the events</a>
          </li>
          <li class="nav-item">
            <a href="/places" class="nav-link">See all the places</a>
          </li>
          <li class="nav-item">
            <a href="/sales" class="nav-link">See all the sales</a>
          </li>
        </ul>
        <div class="hamburger">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </nav>
    </header>
    <section>
      <div class="container">
        <h1>Edit Ticket Type <%= type.type %></h1>
        <form action="/events/<%= event._id %>/tickets/edit" method="post">
          <table>
            <tbody>
              <tr>
                <td>Id</td>
                <td><input type="hidden" name="_id" value="<%= type._id %>"><%= type._id %></td>
              </tr>
              <tr>
                <td>Event linked</td>
                <td><%= event.name %></td>
              </tr>
              <tr>
                <td>Price</td>
                <td><input type="number" name="price" value="<%= type.price %>"></td>
              </tr>
              <tr>
                <td colspan="2"><button type="submit">Edit</button></td>
              </tr>
            </tbody>
          </table>
      </form>
      </div>
      <h3 class="links"><a href="/events/<%= event._id %>/tickets/allTypes">Watch all the types of ticket for this event</a></h3>
    </section>
  </body>
  <script src="/js/navbar.js"></script>
</html>

